@model IEnumerable<Models.Product>

<div class="maincontent-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="latest-product">
                    <h2 class="section-title">Latest Products</h2>
                    <div class="product-carousel">
                        @foreach (var item in Model)
                        {
                            <div class="single-product">
                                <div class="product-f-image">
                                    <img src="@item.ProductImage" alt="@item.ProductName">
                                    <div class="product-hover">
                                        <a data-id="@item.ProductID" class="add-to-cart-link btn_add_to_card" title="@item.ProductName"><i class="fa fa-shopping-cart"></i> Add to cart</a>
                                        <a href="/san-pham/@item.SeoLink-@item.ProductID" title="@item.ProductName" class="view-details-link"><i class="fa fa-link"></i> See details</a>
                                    </div>
                                </div>

                                <h2><a href="/san-pham/@item.SeoLink-@item.ProductID" title="@item.ProductName">@item.ProductName</a></h2>

                                <div class="product-carousel-price">
                                    <ins>@string.Format("{0:0,0}", item.UnitPrice) VND</ins>
                                </div>
                            </div>

                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>