@model List<Models.Category>

<script>
    $(document).ready(function () {
        $(".txtCategoryID").click(function () {
            var idd = $(this).attr("data-categoryid");

            $.ajax({
                type: "get",
                url: "/Product/ListByCategory",
                data: { id: idd },
                success: function (da) {
                    $(".lst-Product").html(da);
                }
            })
        })
    })
</script>


<div class="brands-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="brand-wrapper">
                    <div class="brand-list">
                        @foreach (var item in Model)
                        {
                            <a title="@item.CategoryName" data-categoryid="@item.CategoryID" class="txtCategoryID"><img src="@item.CategoryImage" alt="@item.CategoryName"></a>
                        }
                    
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> <!-- End brands area -->