@model Models.Account

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/Assets/ADMIN/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom fonts for this template-->
    <link href="~/Assets/ADMIN/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <!-- Custom styles for this template-->
    <link href="~/Assets/ADMIN/css/sb-admin.css" rel="stylesheet">
    <title>Đăng nhập</title>
</head>

<body class="bg-dark">
    <div class="container">
        <div class="card card-login mx-auto mt-5">
            <div class="card-header">Login</div>
            <div class="card-body">
                <form action="/Admin/LoginAd/Login" method="post" enctype="multipart/form-data" >
                    <div class="form-group">
                        <div class="form-label-group">
                            <input type="text" id="us" name="us" class="form-control" placeholder="Email address" required="required" autofocus="autofocus">
                            <label for="inputEmail">User name</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-label-group">
                            <input type="password" id="pas" name="pas" class="form-control" placeholder="Password" required="required">
                            <label for="inputPassword">Password  </label>
                        </div>
                    </div>
                    <div class="form-group">                        
                    </div>
                    <button type="submit" class="btn btn-primary btn-block" >Đăng nhập</button>
                </form>                
            </div>
        </div>
    </div>

    <script src="~/Assets/ADMIN/vendor/jquery/jquery.min.js"></script>
    <script src="~/Assets/ADMIN/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Assets/ADMIN/vendor/jquery-easing/jquery.easing.min.js"></script>
</body>




</html>
